<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.thenotesapp.fragments.HomeFragment"
        android:label="Home" >

        <!-- Navigate to Add Note -->
        <action
            android:id="@+id/action_homeFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />

        <!-- Navigate to Edit Note with argument -->
        <action
            android:id="@+id/action_homeFragment_to_editNoteFragment"
            app:destination="@id/editNoteFragment" />
    </fragment>

    <!-- Add Note Fragment -->
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.example.thenotesapp.fragments.AddNoteFragment"
        android:label="Add Note" >

        <action
            android:id="@+id/action_addNoteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- Edit Note Fragment -->
    <fragment
        android:id="@+id/editNoteFragment"
        android:name="com.example.thenotesapp.fragments.EditNoteFragment"
        android:label="Edit Note" >

        <!-- Required for Safe Args to pass full Note object -->
        <argument
            android:name="note"
            app:argType="com.example.thenotesapp.model.Note"
            app:nullable="false" />

        <action
            android:id="@+id/action_editNoteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>
