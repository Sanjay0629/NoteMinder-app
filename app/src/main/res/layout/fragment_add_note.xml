<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_medium"
        tools:context=".NewNoteFragment">

        <!-- Top Guideline for better spacing on larger screens -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="@dimen/margin_large"
            android:orientation="horizontal" />

        <!-- Heading -->
        <TextView
            android:id="@+id/addNoteHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Note"
            android:textSize="@dimen/text_xlarge"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toTopOf="@id/topGuideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Note Title -->
        <EditText
            android:id="@+id/addNoteTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter the title"
            android:maxLines="1"
            android:padding="@dimen/padding_medium"
            android:textSize="@dimen/text_large"
            android:fontFamily="@font/poppins"
            android:background="@drawable/pink_border"
            app:layout_constraintTop_toBottomOf="@id/addNoteHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_medium" />

        <!-- Pin Checkbox -->
        <CheckBox
            android:id="@+id/pinCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pin this note"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/addNoteTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_small" />

        <!-- Lock Checkbox -->
        <CheckBox
            android:id="@+id/lockCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock this note"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/pinCheckBox"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_xsmall" />

        <!-- PIN input field (initially hidden) -->
        <EditText
            android:id="@+id/pinEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter PIN"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:visibility="gone"
            android:padding="@dimen/padding_small"
            android:background="@drawable/pink_border"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toBottomOf="@id/lockCheckBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_small" />

        <!-- Note Description -->
        <EditText
            android:id="@+id/addNoteDesc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="Enter the description"
            android:gravity="top"
            android:padding="@dimen/padding_medium"
            android:textSize="@dimen/text_medium"
            android:fontFamily="@font/poppins"
            android:background="@drawable/pink_border"
            app:layout_constraintTop_toBottomOf="@id/pinEditText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
