<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_medium"
        tools:context=".UpdateNoteFragment">


        <TextView
            android:id="@+id/editNoteHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Note"
            android:textSize="@dimen/text_xlarge"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_medium" />


        <EditText
            android:id="@+id/editNoteTitle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:hint="Enter the title"
            android:maxLines="1"
            android:padding="@dimen/padding_medium"
            android:textSize="@dimen/text_large"
            android:fontFamily="@font/poppins"
            android:background="@drawable/pink_border"
            app:layout_constraintTop_toBottomOf="@id/editNoteHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_medium" />


        <CheckBox
            android:id="@+id/editPinCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pin Note"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/editNoteTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_small" />


        <CheckBox
            android:id="@+id/editLockCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lock Note"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/editNoteTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_small" />

        <!-- PIN Input -->
        <EditText
            android:id="@+id/editPinInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter new PIN (if changing)"
            android:inputType="numberPassword"
            android:visibility="gone"
            android:padding="@dimen/padding_small"
            android:background="@drawable/pink_border"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toBottomOf="@id/editPinCheckBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_small" />

        <!-- Description -->
        <EditText
            android:id="@+id/editNoteDesc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="Enter the description"
            android:gravity="top"
            android:padding="@dimen/padding_medium"
            android:textSize="@dimen/text_medium"
            android:fontFamily="@font/poppins"
            android:background="@drawable/pink_border"
            app:layout_constraintTop_toBottomOf="@id/editPinInput"
            app:layout_constraintBottom_toTopOf="@id/editNoteFab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- Save FAB -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editNoteFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:tint="@color/white"
            android:src="@drawable/baseline_done_24"
            android:contentDescription="Save Note"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
